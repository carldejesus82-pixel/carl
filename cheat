bar.Parent = barContainer
local barFillCorner = Instance.new("UICorner")
barFillCorner.Parent = bar

local last = tick()
local count = 0
RunService.RenderStepped:Connect(function()
	count += 1
	if tick() - last >= 1 then
		fpsLabel.Text = "FPS: "..tostring(count)
		count = 0
		last = tick()
	end
end)

