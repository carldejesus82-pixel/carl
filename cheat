local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- COVER FRAME
local cover = Instance.new("Frame")
cover.Size = UDim2.new(1,0,1,0)
cover.Position = UDim2.new(0,0,0,0)
cover.BackgroundColor3 = Color3.new(0,0,0)
cover.BorderSizePixel = 0
cover.ZIndex = 10
cover.Parent = playerGui

local coverImage = Instance.new("ImageLabel")
coverImage.Size = UDim2.new(1,0,1,0)
coverImage.BackgroundTransparency = 1
coverImage.Image = "rbxassetid://133949947924437"
coverImage.Parent = cover

local coverStroke = Instance.new("UIStroke")
coverStroke.Thickness = 3
coverStroke.Color = Color3.new(1,1,1)
coverStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
coverStroke.Parent = cover

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0.1,0)
title.Position = UDim2.new(0,0,0,0)
title.Text = "KAZO MENU"
title.TextScaled = true
title.Font = Enum.Font.SourceSansBold
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1
title.Parent = cover

local fpsLabel = Instance.new("TextLabel")
fpsLabel.Size = UDim2.new(0.2,0,0.05,0)
fpsLabel.Position = UDim2.new(0.8,0,0.95,0)
fpsLabel.TextScaled = true
fpsLabel.TextColor3 = Color3.new(1,1,1)
fpsLabel.BackgroundTransparency = 1
fpsLabel.Text = "FPS: 0"
fpsLabel.Parent = cover

local percentLabel = Instance.new("TextLabel")
percentLabel.Size = UDim2.new(0.3,0,0.05,0)
percentLabel.Position = UDim2.new(0.35,0,0.85,0)
percentLabel.Text = "0%"
percentLabel.TextScaled = true
percentLabel.TextColor3 = Color3.new(1,1,1)
percentLabel.BackgroundTransparency = 1
percentLabel.Parent = cover

local barBack = Instance.new("Frame")
barBack.Size = UDim2.new(0.3,0,0.015,0)
barBack.Position = UDim2.new(0.35,0,0.80,0)
barBack.BackgroundColor3 = Color3.fromRGB(80,80,80)
barBack.BorderSizePixel = 0
barBack.Parent = cover
Instance.new("UICorner", barBack)

local barFill = Instance.new("Frame")
barFill.Size = UDim2.new(0,0,1,0)
barFill.BackgroundColor3 = Color3.new(1,1,1)
barFill.BorderSizePixel = 0
barFill.Parent = barBack
Instance.new("UICorner", barFill)

local profile = Instance.new("ImageLabel")
profile.Size = UDim2.new(0.05,0,0.1,0)
profile.Position = UDim2.new(0.25,0,0.78,0)
profile.BackgroundTransparency = 1
pcall(function()
	profile.Image = game.Players:GetUserThumbnailAsync(player.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size100x100)
end)
profile.Parent = cover

local lastUpdate = tick()
local frames = 0
RunService.RenderStepped:Connect(function()
	frames += 1
	if tick() - lastUpdate >= 1 then
		fpsLabel.Text = "FPS: "..frames
		frames = 0
		lastUpdate = tick()
	end
end)

local tweenInfo = TweenInfo.new(20, Enum.EasingStyle.Linear)
local barTween = TweenService:Create(barFill, tweenInfo, {Size = UDim2.new(1,0,1,0)})
barTween:Play()

local startTime = tick()
task.spawn(function()
	while tick() - startTime < 20 do
		local percent = math.floor((tick() - startTime)/20*100)
		percentLabel.Text = percent.."%"
		task.wait(0.05)
	end
	cover:Destroy()
end)

-- MAIN GUI
local mainGui = Instance.new("Frame")
mainGui.Size = UDim2.new(0.6,0,0.6,0)
mainGui.Position = UDim2.new(0.2,0,0.2,0)
mainGui.BackgroundColor3 = Color3.new(0,0,0)
mainGui.Visible = false
mainGui.ZIndex = 11
mainGui.Parent = playerGui
Instance.new("UICorner", mainGui)

local mainStroke = Instance.new("UIStroke")
mainStroke.Thickness = 3
mainStroke.Color = Color3.new(1,1,1)
mainStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
mainStroke.Parent = mainGui

local drag = Instance.new("Frame")
drag.Size = UDim2.new(1,0,0.1,0)
drag.BackgroundTransparency = 1
drag.Parent = mainGui
local dragging = false
local dragInput, mousePos, framePos
drag.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 then
		dragging = true
		mousePos = input.Position
		framePos = mainGui.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
drag.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
		local delta = input.Position - mousePos
		mainGui.Position = UDim2.new(framePos.X.Scale, framePos.X.Offset + delta.X, framePos.Y.Scale, framePos.Y.Offset + delta.Y)
	end
end)

local topbar = Instance.new("TextLabel")
topbar.Size = UDim2.new(1,0,0.1,0)
topbar.Text = "KAZO MENU"
topbar.TextScaled = true
topbar.Font = Enum.Font.SourceSansBold
topbar.BackgroundColor3 = Color3.new(0,0,0)
topbar.TextColor3 = Color3.new(1,1,1)
topbar.Parent = mainGui

local profileSmall = profile:Clone()
profileSmall.Size = UDim2.new(0.1,0,1,0)
profileSmall.Position = UDim2.new(0,0,0,0)
profileSmall.Parent = topbar

local fpsSmall = fpsLabel:Clone()
fpsSmall.Size = UDim2.new(0.2,0,1,0)
fpsSmall.Position = UDim2.new(0.12,0,0,0)
fpsSmall.Parent = topbar

local tabNames = {"ROLEPLAY","TROLL","MATA","DUPES"}
for i, name in ipairs(tabNames) do
	local tab = Instance.new("TextButton")
	tab.Size = UDim2.new(0.22,0,0.1,0)
	tab.Position = UDim2.new(0.05 + (i-1)*0.23,0,0.2,0)
	tab.Text = name
	tab.TextScaled = true
	tab.BackgroundColor3 = Color3.fromRGB(30,30,30)
	tab.TextColor3 = Color3.new(1,1,1)
	tab.Parent = mainGui
end

UserInputService.InputBegan:Connect(function(input, gpe)
	if not gpe and input.KeyCode == Enum.KeyCode.K then
		mainGui.Visible = not mainGui.Visible
	end
end)
